<w:wwml
 xmlns="http://www.w3.org/TR/REC-html40"
 xmlns:w="http://freecode.no/xml/namespaces/wwml-1.0"
 xmlns:html="http://www.w3.org/TR/REC-html40"
 >
<!-- bind="Callbacks.MyWindow" -->
 <w:HtmlWindow
  using="Webwidgets"

  id="MyWindow"
  title="RedBack WebWidgets demo application">

  <w:dict
   id="headers"
   Content-Type="text/html; charset=UTF-8"
   Status="202 Page loaded" />

  <w:StyleLink id="head" style="../../Widgets.css" />

  <w:HtmlWidget id="body">

   <w:DateInputWidget id="date" value=":time:1998-01-01 22:33:34" />

   <w:FileInputWidget id="file" />

   <w:TabbedViewWidget id="tabs" page="first">
    <w:HtmlWidget id="first" title="First">The first page</w:HtmlWidget>
    <w:HtmlWidget id="second" title="Second">The second page</w:HtmlWidget>
    <w:HtmlWidget id="third" title="Third">The third page</w:HtmlWidget>
   </w:TabbedViewWidget>

   <w:GBOList id="ListTest" argumentName='test' rowsPerPage=":integer:20">
    <w:dict id="functions" copy="C" edit="E" delete="D" />
    <w:dict id="columns" foo="Fooish foo" bar="Barbar" fie="Fiesh fish" />
    <w:list id="dontMergeColumns"><w:string id="bar">bar</w:string></w:list>
    <w:list id="rows">
     <w:dict id="row1" foo="47" bar="11" fie="56" />
     <w:dict id="row2" foo="47" bar="11" fie="56" />
     <w:dict id="row3" foo="47" bar="12" fie="56" />
     <w:dict id="row4" foo="47" bar="11" fie="56" />
     <w:dict id="row5" foo="47" bar="11" fie="57" />
     <w:dict id="row6" foo="48" bar="11" fie="57" />
     <w:dict id="row7" foo="48" bar="11" fie="52" />
     <w:dict id="row8" foo="Bertil" bar="Bengtsson" fie="57" />
     <w:dict id="row9">
      <w:StringInputWidget id="foo" value="Anders" />
      <w:StringInputWidget id="bar" value="And" />
      <w:StringInputWidget id="fie" value="Mumum xxx" />
     </w:dict>
     <w:dict id="row10">
      <w:StringInputWidget id="foo" value="Cesar" />
      <w:StringInputWidget id="bar" value="And" />
      <w:StringInputWidget id="fie" value="Mumum xxx" />
     </w:dict>
    </w:list>
   </w:GBOList>

   <w:AddressInputWidget id="xzy" />

   <div id="header">
    <span id="search">Search: <w:StringInputWidget id="Search" argumentName="search" value="/foo/bar/fie"/></span>
    <span id="dir">
     <w:HtmlWidget id="CurrentDirectory" html="/foo/bar/fie" />
    </span>
    <span id="right">
     <span id="date">Date: <w:ListInputWidget id="SelectDate" /></span>
     <w:ButtonInputWidget id="Filter" bind="w:testwwml.FilterButton" title="Filter" />
    </span>
   </div>

   <div id="body">
    <w:ButtonInputWidget id="ShowDialog" title="Show dialog" /><br />
    <w:DialogWidget id="SomeDialog" visible=":false">
     <w:HtmlWidget id="head" html="My dialog" />
     <w:HtmlWidget id="body" html="Click ok or cancel, please" />
    </w:DialogWidget>
    <br />

    <w:TableWidget id="table">
     <w:HtmlWidget id="cell_0_0_1_1" html="Foo" />
     <w:HtmlWidget id="cell_1_0_1_1" html="Bar" />
     <w:HtmlWidget id="cell_0_1_2_1" html="Fie" />
     <w:HtmlWidget id="cell_0_2_1_1" html="Ma" />
     <w:HtmlWidget id="cell_1_2_1_1" html="Ba" />
     <w:HtmlWidget id="cell_2_0_1_3" html="Foo" />
    </w:TableWidget>
    <br />

    Last password: <w:HtmlWidget id="lastpwd" /><br />
    <w:NewPasswordInputWidget id="newpwd" value="foo" /><br />
    <w:ButtonInputWidget id="pwdclear" title="Clear new password" />
    <w:ButtonInputWidget id="pwdset" title="Set new password" /><br />

    <w:HtmlWidget id="Dirlisting">
     <table>
      <tr><th>Type</th><th>Filename</th><th>Dates</th><th>Actions</th></tr>
      <w:ListWidget id="Listing">

       <w:HtmlWidget classid="Entry">
	<tr>
	 <td>
	  <w:variable id="type" />
	 </td>
	 <td>
	  <w:variable id="name" />
	 </td>
	 <td>
	  <w:variable id="dates" />
	 </td>
	 <td>
	  <w:HtmlWidget id="actions">
	   <w:CheckboxInputWidget id="check" value="1" />
	   <w:LabelWidget id="label" target="1/check">
	    <w:HtmlWidget id="label">Restore</w:HtmlWidget>
	   </w:LabelWidget>
	  </w:HtmlWidget>
	 </td>
	</tr>
       </w:HtmlWidget>

      </w:ListWidget>
     </table>
     <w:ButtonInputWidget id="UpdateFiles" title="Update Files" /><br />
    </w:HtmlWidget>
   </div>

   <div id="footer">
   xxx
   </div>
  </w:HtmlWidget>
 </w:HtmlWindow>
</w:wwml>
