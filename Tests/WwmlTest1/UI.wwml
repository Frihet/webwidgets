<w:wwml
 xmlns="http://www.w3.org/TR/REC-html40"
 xmlns:w="http://freecode.no/xml/namespaces/wwml-1.0"
 xmlns:html="http://www.w3.org/TR/REC-html40"
 bind="Callbacks"
 >
 <w:HtmlWindow
  id="MyWindow"
  title="RedBack WebWidgets demo application">

  <w:Html id="body">

   Last password: <w:Html id="lastpwd" /><br />
   <w:Field id='newpwd' label='New password'><w:NewPasswordInput id="field" value="foo" /></w:Field>
   <w:Button id="pwdclear" title="Clear new password" />
   <w:Button id="pwdset" title="Set new password" /><br />

   <div><w:Widget id="language" /></div>
   <div><w:LanguageSelector id="sel" /></div>

   <w:DateInput id="date" value=":time:1998-01-01 22:33:34" />

   <w:FileInput id="file" />

   <w:TabbedView id="tabs" page="first">
    <w:Html id="first" title="First">The first page</w:Html>
    <w:Html id="second" title="Second">The second page</w:Html>
    <w:Html id="third" title="Third">The third page</w:Html>
   </w:TabbedView>

   <w:GBOList id="ListTest" argumentName='test' rowsPerPage=":integer:20">
    <w:dict id="functions" copy="C" edit="E" delete="D" />
    <w:dict id="columns" foo="Fooish foo" bar="Barbar" fie="Fiesh fish" />
    <w:list id="dontMergeColumns"><w:string id="bar">bar</w:string></w:list>
    <w:list id="rows">
     <w:dict id="row1" foo="47" bar="11" fie="56" />
     <w:dict id="row2" foo="47" bar="11" fie="56" />
     <w:dict id="row3" foo="47" bar="12" fie="56" />
     <w:dict id="row4" foo="47" bar="11" fie="56" />
     <w:dict id="row5" foo="47" bar="11" fie="57" />
     <w:dict id="row6" foo="48" bar="11" fie="57" />
     <w:dict id="row7" foo="48" bar="11" fie="52" />
     <w:dict id="row8" foo="Bertil" bar="Bengtsson" fie="57" />
     <w:dict id="row9">
      <w:StringInput id="foo" value="Anders" />
      <w:StringInput id="bar" value="And" />
      <w:StringInput id="fie" value="Mumum xxx" />
     </w:dict>
     <w:dict id="row10">
      <w:StringInput id="foo" value="Cesar" />
      <w:StringInput id="bar" value="And" />
      <w:StringInput id="fie" value="Mumum xxx" />
     </w:dict>
    </w:list>
   </w:GBOList>

   <w:AddressInput id="xzy" />

   <div id="header">
    <span id="search">Search: <w:StringInput id="Search" argumentName="search" value="/foo/bar/fie"/></span>
    <span id="dir">
     <w:Html id="CurrentDirectory" html="/foo/bar/fie" />
    </span>
    <span id="right">
     <span id="date">Date: <w:ListInput id="SelectDate" /></span>
     <w:Button id="Filter" bind="w:testwwml.FilterButton" title="Filter" />
    </span>
   </div>

   <div id="body">
    <w:Button id="ShowDialog" title="Show dialog" /><br />
    <w:Dialog id="SomeDialog" visible=":false">
     <w:Html id="head" html="My dialog" />
     <w:Html id="body" html="Click ok or cancel, please" />
    </w:Dialog>
    <br />

    <w:Table id="table">
     <w:Html id="cell_0_0_1_1" html="Foo" />
     <w:Html id="cell_1_0_1_1" html="Bar" />
     <w:Html id="cell_0_1_2_1" html="Fie" />
     <w:Html id="cell_0_2_1_1" html="Ma" />
     <w:Html id="cell_1_2_1_1" html="Ba" />
     <w:Html id="cell_2_0_1_3" html="Foo" />
    </w:Table>
    <br />

    <w:Html id="Dirlisting">
     <table>
      <tr><th>Type</th><th>Filename</th><th>Dates</th><th>Actions</th></tr>
      <w:List id="Listing">

       <w:Html classid="Entry">
	<tr>
	 <td>
	  <w:variable id="type" />
	 </td>
	 <td>
	  <w:variable id="name" />
	 </td>
	 <td>
	  <w:variable id="dates" />
	 </td>
	 <td>
	  <w:Html id="actions">
	   <w:Checkbox id="check" value="1" />
	   <w:Label id="label" target="1/check">
	    <w:Html id="label">Restore</w:Html>
	   </w:Label>
	  </w:Html>
	 </td>
	</tr>
       </w:Html>

      </w:List>
     </table>
     <w:Button id="UpdateFiles" title="Update Files" /><br />
    </w:Html>
   </div>

   <div id="footer">
   xxx
   </div>
  </w:Html>
 </w:HtmlWindow>
</w:wwml>
