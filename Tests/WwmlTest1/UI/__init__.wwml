<w:wwml
 xmlns="http://www.w3.org/TR/REC-html40"
 xmlns:w="http://freecode.no/xml/namespaces/wwml-1.0"
 xmlns:html="http://www.w3.org/TR/REC-html40"
 bind="Webwidgets.Tests.WwmlTest1.Callbacks"
 >
 <w:HtmlWindow
  id="MyWindow"
  title="RedBack Webwidgets demo application">

  <w:Html id="body">

   <w:Dialog id="SomeDialog" visible=":false">
    <w:Html id="head" html="My dialog" />
    <w:Html id="body" html="Click ok or cancel, please" />
   </w:Dialog>

   <w:MainMenu id="tabs" page=":path:home" title="Test app">

    <w:Html id="home" title="Home">
     <w:Media id="logo" />

     <h1>Welcome to the RedBack Webwidgets demo application</h1>

     <p>This demo application shows off most of the standard widgets
     that comes bundled with Webwidgets. It is both a good starting
     point to shop for widgets, and to learn how to create a
     Webwidgets application.</p>

     <p>Use the menu at the top to navigate among the different kinds
     of widgets.</p>

     <h1>Some (helpful) links</h1>
     <ul>
      <li><a href="http://code.freecode.no/Projects/Webwidgets">The Webwidgets homepage</a></li>
      <li><a href="http://freecode.no">Homepage FreeCode, the project sponsor</a></li>
      <li><a href="http://redhog.org">Homepage RedHog, the original author</a></li>
     </ul>
    </w:Html>

    <w:Tabset id="input" title="Input">

     <w:Html id="files" title="File editors">
      <w:FileEditorList id="fileditorlisttest" />
      <w:FileEditor id="fileditortest" />
     </w:Html>


     <w:Fieldgroup id="data" title="Data input">
      <w:Field id="longtext" label=":Html:A longer text">
       <w:StringInput id="field" cols=":integer:20" rows=":integer:10">
	<w:string id="value">
  Hej allla barn,
  nu är det branprogram!
  Titta här skall ni få se vad farbror frej tar fram!
	</w:string>
       </w:StringInput>
      </w:Field>
      <w:Field id="lastpwd" label=":Html:Last password">
       <w:Html id="field" error=":none" />
      </w:Field>
      <w:Field id='newpwd' label=':Text:New password'>
       <w:NewPasswordInput id="field" value="foo" />
      </w:Field>
      <w:Field id="updatepwd" label=":Html:Update passwords">
       <w:Html id="field" error=":none">
        <w:Button id="pwdclear" title="Clear new password" />
        <w:Button id="pwdset" title="Set new password" /><br />
       </w:Html>
      </w:Field>
      <w:Field id="someDate" label=":Html:Some date">
       <w:DateInput id="field" value=":time:1998-01-01 22:33:34" />
      </w:Field>
      <w:Field id="address" label=":Html:Some address">
       <w:AddressInput id="field" error=":none" />
      </w:Field>
     </w:Fieldgroup>

     <w:Tabset id="third" title="Third item">
      <w:Html id="first" title="First sub item">
       Mananana
      </w:Html>

      <w:Html id="second" title="Second sub item">
       Mananana-mamanana
      </w:Html>

     </w:Tabset>
    </w:Tabset>




    <w:Tabset id="formatting" title="Output">
     <w:Html id="table" title="Tables">
      <w:Table id="ListTest" argument_name='test' rows_per_page=":integer:20">
       <w:dict id="functions" copy="C" edit="E" delete="D" />
       <w:dict id="group_functions" new="New" delete="Delete all" />
       <w:odict id="columns">
	<w:string id="foo">Fooish foo</w:string>
	<w:string id="bar">Barbar</w:string>
	<w:string id="fie">Fish</w:string>
	<w:string id="x">X</w:string>
	<w:string id="y">Y</w:string>
	<w:string id="z">Z</w:string>
       </w:odict>
       <w:list id="dont_merge_columns"><w:string id="bar">bar</w:string></w:list>
       <w:list id="rows">
	<w:dict id="row1" foo="47" bar="11" fie="56" x="X" y="Y" z="Z" />
	<w:dict id="row2" foo="47" bar="11" fie="56" x="X" y="Y" z="Z" />
	<w:dict id="row3" foo="47" bar="12" fie="56" x="X" y="Y" z="Z" />
	<w:dict id="row4" foo="47" bar="11" fie="56" x="X" y="Y" z="Z" />
	<w:dict id="row5" foo="47" bar="11" fie="57" x="X" y="Y" z="Z" />
	<w:dict id="row6" foo="48" bar="11" fie="57" x="X" y="Y" z="Z" />
	<w:dict id="row7" foo="48" bar="11" fie="52" x="X" y="Y" z="Z" />
	<w:dict id="row8" foo="Bertil" bar="Bengtsson" fie="57" x="X" y="Y" z="Z" />
	<w:dict id="row9" x="X" y="Y" z="Z">
	 <w:StringInput id="foo" value="Anders" />
	 <w:StringInput id="bar" value="And" />
	 <w:StringInput id="fie" value="Mumum xxx" />
	</w:dict>
	<w:dict id="row10" x="X" y="Y" z="Z">
	 <w:StringInput id="foo" value="Cesar" />
	 <w:StringInput id="bar" value="And" />
	 <w:StringInput id="fie" value="Mumum xxx" />
	</w:dict>
       </w:list>
      </w:Table>
     </w:Html>

     <w:Html id="grid" title="Grid layout">
      <w:GridLayout id="table">
       <w:Html id="cell_0_0_1_1" html="Foo" />
       <w:Html id="cell_1_0_1_1" html="Bar" />
       <w:Html id="cell_0_1_2_1" html="Fie" />
       <w:Html id="cell_0_2_1_1" html="Ma" />
       <w:Html id="cell_1_2_1_1" html="Ba" />
       <w:Html id="cell_2_0_1_3" html="Foo" />
      </w:GridLayout>
     </w:Html>
    </w:Tabset>




    <w:Tabset id="composite" title="Composite widgets">
     <w:Html id="dialog" title="Dialog">
      <w:Button id="ShowDialog" title="Show dialog" />
     </w:Html>

     <w:LogIn id="logIn" title="Log in/log out">
      <w:LogOut classid="Application" />
     </w:LogIn>

    </w:Tabset>

    <w:Tabset id="dynamic" title="Dynamic widgets">
     <w:Html id="filelist" title="File list">
      <table>
       <tr><th>Type</th><th>Filename</th><th>Dates</th><th>Actions</th></tr>
       <w:List id="Listing">

	<w:Html classid="Entry">
	 <tr>
	  <td>
	   <w:variable id="type" />
	  </td>
	  <td>
	   <w:variable id="name" />
	  </td>
	  <td>
	   <w:variable id="dates" />
	  </td>
	  <td>
	   <w:Html id="actions">
	    <w:Checkbox id="check" value="1" />
	    <w:Label id="label" target="1/check">
	     <w:Html id="label">Restore</w:Html>
	    </w:Label>
	   </w:Html>
	  </td>
	 </tr>
	</w:Html>

       </w:List>
      </table>
      <w:Button id="UpdateFiles" title="Update Files" />
     </w:Html>
    </w:Tabset>

    <w:Tabset id="config" title="Configuration">
     <w:Html id="language" title="Language">
      <div>Current language(s): <w:Widget id="language" /></div>
      <div><w:LanguageSelector id="sel" /><w:UpdateButton id="update" /></div>
     </w:Html>
    </w:Tabset>


   </w:MainMenu>

  </w:Html>
 </w:HtmlWindow>
</w:wwml>
