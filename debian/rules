#!/usr/bin/make -f
# -*- makefile -*-
# Sample debian/rules that uses debhelper.
#
# This file was originally written by Joey Hess and Craig Small.
# As a special exception, when this file is copied by dh-make into a
# dh-make output file, you may use that output file without restriction.
# This special exception was added by Craig Small in version 0.37 of dh-make.
#
# Modified to make a template file for a multi-binary package with separated
# build-arch and build-indep targets  by Bill Allombert 2001

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

sysconfdir := /etc
libdir := /usr/lib
sbindir := /usr/sbin
services := /var

pyversion := $(shell python -c "import sys; print str(sys.version_info[0]) + '.' + str(sys.version_info[1])")
pynextversion := $(shell python -c "import sys; print str(sys.version_info[0]) + '.' + str(sys.version_info[1] + 1)")
pydir := $(libdir)/python$(pyversion)/site-packages
destdir := $(pydir)/Webwidgets

webware := $(services)/www/WebWare

configure: configure-stamp
configure-stamp:
	dh_testdir
	touch configure-stamp


#Architecture 
#build: build-arch build-indep
build: build-indep

build-arch: build-arch-stamp
build-arch-stamp: configure-stamp 
	touch build-arch-stamp

build-indep: build-indep-stamp
build-indep-stamp: configure-stamp 
	touch build-indep-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-arch-stamp build-indep-stamp #CONFIGURE-STAMP#
	dh_clean 

install: install-indep install-arch
install-indep:
	dh_testdir
	dh_testroot
	dh_clean -k -i 
	dh_installdirs -i

	dh_install -i
	mkdir -p "$(CURDIR)/debian/webwidgets"
	mkdir -p "$(CURDIR)/debian/webwidgets$(destdir)"
	mkdir -p "$(CURDIR)/debian/webwidgets$(webware)/Configs/Application.d"

	cp -a $(shell ls | grep -v debian | grep -v Docs) "$(CURDIR)/debian/webwidgets$(destdir)/"

	echo "Contexts['webwidgets'] = '$(destdir)'" > \
         "$(CURDIR)/debian/webwidgets$(webware)/Configs/Application.d/Webwidgets.config"

install-arch:
	dh_testdir
	dh_testroot
	dh_clean -k -s 
	dh_installdirs -s
	dh_install -s

# Must not depend on anything. This is to be called by
# binary-arch/binary-indep
# in another 'make' thread.
binary-common:
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installdocs $(shell ls -d Docs/* | grep -v "Logo")
#	dh_installexamples
#	dh_installmenu
#	dh_installdebconf	
#	dh_installlogrotate	
#	dh_installemacsen
#	dh_installpam
#	dh_installmime
#	dh_installinit
#	dh_installcron
#	dh_installinfo
#	dh_installman
#	dh_link
#	dh_strip
#	dh_compress
	dh_fixperms
#	dh_perl
#	dh_python
#	dh_pysupport
	dh_makeshlibs
	dh_installdeb
	dh_shlibdeps
	dh_gencontrol -- -Vpyversion=$(pyversion) -Vpynextversion=$(pynextversion)
	dh_md5sums
	dh_builddeb
# Build architecture independant packages using the common target.
binary-indep: build-indep install-indep
	$(MAKE) -f debian/rules DH_OPTIONS=-i binary-common

# Build architecture dependant packages using the common target.
binary-arch: build-arch install-arch
	$(MAKE) -f debian/rules DH_OPTIONS=-a binary-common

#binary: binary-arch binary-indep
binary: binary-indep
.PHONY: build clean binary-indep binary-arch binary install install-indep install-arch configure
